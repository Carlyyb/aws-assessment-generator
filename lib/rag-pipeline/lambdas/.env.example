# 知识库管理系统环境变量配置

# 版本控制配置
ENABLE_VERSION_CONTROL=true
MAX_VERSIONS=5
ARCHIVE_PREFIX=archive/versions/

# 重试配置
MAX_RETRY_ATTEMPTS=3
BASE_DELAY_MS=1000
MAX_DELAY_MS=30000

# S3配置
ARTIFACTS_UPLOAD_BUCKET=${ARTIFACTS_UPLOAD_BUCKET}
KB_STAGING_BUCKET=${KB_STAGING_BUCKET}

# Bedrock配置
BEDROCK_ROLE_ARN=${BEDROCK_ROLE_ARN}
OPSS_COLLECTION_ARN=${OPSS_COLLECTION_ARN}

# DynamoDB配置
KB_TABLE=${KB_TABLE}

# 日志配置
LOG_LEVEL=INFO
POWERTOOLS_SERVICE_NAME=knowledge-base-management
POWERTOOLS_METRICS_NAMESPACE=assessment-generator
